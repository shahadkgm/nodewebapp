
<style>
    .main {
        padding: 30px 0;
    }

    .edit-address-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .edit-address-container h2 {
        font-family: 'Arial', sans-serif;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .btn-success {
        background-color: #4caf50;
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-success:hover {
        background-color: #45a049;
    }

    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .form-group input::placeholder {
        color: #aaa;
    }

    @media (max-width: 768px) {
        .edit-address-container {
            padding: 15px;
        }

        .btn {
            width: 100%;
        }
    }
</style>
<main class="main">
    <div class="container">
        <div class="edit-address-container">
            <h2>Edit Address</h2>
            <form action="/edit-address/<%= address._id %>" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" value="<%= address.name %>" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" value="<%= address.city %>" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="landmark">Landmark</label>
                    <input type="text" id="landmark" name="landmark" value="<%= address.landmark %>" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" id="state" name="state" value="<%= address.state %>" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="pincode">Pincode</label>
                    <input type="text" id="pincode" name="pincode" value="<%= address.pincode %>" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" id="phone" name="phone" value="<%= address.phone %>" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="altPhone">Alternate Phone</label>
                    <input type="text" id="altPhone" name="altPhone" value="<%= address.altPhone %>" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success btn-block mt-3">Update Address</button>
            </form>
        </div>
    </div>
</main>
